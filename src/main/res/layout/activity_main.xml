<!--
* The navigation drawer layout
*
* Contains the fragments container and a list view for navigation options.
* -->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout" >

    <!--
    * Main Content Area
    *
    * Different fragments are replaced in this section using fragment transactions.
    * -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/content_frame"
            />

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background = "@color/teal_700"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                style="?android:buttonBarStyle"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/bottom_toolbar_home_text"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    style="?buttonBarButtonStyle"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/bottom_toolbar_resources_text"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    style="?buttonBarButtonStyle"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>




    <!--
    * A list of navigation options presented to the user.
    *
    * An onClickListener is attached to the ListView items and forces the fragment transactions
    * within the main content area to occur.
    * -->
    <ListView
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer"
        android:layout_gravity="end"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ffffff"
        />

</androidx.drawerlayout.widget.DrawerLayout>