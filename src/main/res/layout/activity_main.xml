<!--
* The navigation drawer layout
*
* Contains the fragments container and a list view for navigation options.
* -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout" >

    <!--
    * Main Content Area
    *
    * Different fragments are replaced in this section using fragment transactions.
    * -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_frame"
        />


    <!--
    * A list of navigation options presented to the user.
    *
    * An onClickListener is attached to the ListView items and forces the fragment transactions
    * within the main content area to occur.
    * -->
    <ListView
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ffffff"
        />

</android.support.v4.widget.DrawerLayout>