<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentHome_CompensationSummaryFragment_Description"
    >
    <TextView
        android:id="@+id/fragment_home_compensation_summary_content_swipe_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Swipe right to change your dependency status or disability ratings."
        android:textColor="@color/black"
        android:textSize="35dp"
        />

    <TextView
        android:id="@+id/fragment_home_compensation_summary_content_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/fragment_home_compensation_summary_content_disclaimer_text"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

</LinearLayout>


