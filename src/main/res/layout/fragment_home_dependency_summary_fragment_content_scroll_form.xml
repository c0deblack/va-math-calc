<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FragmentHome_DependencySummaryFragment_ScrollForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <!-- TODO: Use String resources instead of static strings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <!-- HEADER -->
        <TextView
            android:id="@+id/fragment_dependency_summary_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="35sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="@string/dependency_summary_header_text"
            />
        <TextView
            android:id="@+id/fragment_dependency_summary_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:text="@string/dependency_summary_description_text"
            />



        <!-- SPOUSE -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/VAMathCalculator.Form.Header"
                android:text="@string/dependency_summary_spouse_header"
                />
            <TextView
                style="@style/VAMathCalculator.Form.Prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dependency_summary_spouse_text"
                android:gravity="start"
                />
            <TextView
                style="@style/VAMathCalculator.Form.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dependency_summary_spouse_body"
                android:gravity="start"
                />
            <Spinner
                style="@style/VAMathCalculator.Form.Spinner"
                android:id="@+id/fragment_dependency_summary_married_spinner"
                />

        </LinearLayout>



        <!-- CHILDREN -->
        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fragment_dependency_summary_children_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/VAMathCalculator.Form.Header"
                android:text="@string/dependency_summary_children_header"
                />

            <TextView
                style="@style/VAMathCalculator.Form.Prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dependency_summary_children_text"
                android:gravity="start"
                />

            <TextView
                style="@style/VAMathCalculator.Form.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dependency_summary_children_description"
                android:gravity="start"
                />
            <Spinner
                style="@style/VAMathCalculator.Form.Spinner"
                android:id="@+id/fragment_dependency_summary_child_spinner"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/VAMathCalculator.Form.Prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dependency_summary_child_education_text"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/fragment_dependency_summary_child_education_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/VAMathCalculator.Form.Body"
                android:text="@string/dependency_summary_child_education_description">
            </TextView>
            <Spinner
                android:id="@+id/fragment_dependency_summary_education_spinner"
                style="@style/VAMathCalculator.Form.Spinner"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/VAMathCalculator.Form.Prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dependency_summary_disabled_child_text"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/fragment_dependency_summary_birth_defect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/VAMathCalculator.Form.Body"
                android:text="@string/dependency_summary_disabled_child_description">
            </TextView>
            <LinearLayout
                android:id="@+id/disabled_child_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <Button
                android:id="@+id/add_disabled_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dependency_summary_add_disabled_button_text"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/design_default_color_on_primary"
                />
        </LinearLayout>



        <!-- PARENTS -->
        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fragment_dependency_summary_parents_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/VAMathCalculator.Form.Header"
                android:text="@string/dependency_summary_parents_header"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />

            <TextView
                style="@style/VAMathCalculator.Form.Prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dependency_summary_parents_text"
                android:gravity="start"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/VAMathCalculator.Form.Body"
                android:text="@string/dependency_summary_parents_description">
            </TextView>
            <Spinner
                android:id="@+id/fragment_dependency_summary_parents_spinner"
                style="@style/VAMathCalculator.Form.Spinner"
                />

        </LinearLayout>



        <!-- DAILY AID -->

        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fragment_dependency_summary_dailyaid_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/VAMathCalculator.Form.Header"
                android:text="@string/dependency_summary_aid_header"
                />
            <TextView
                style="@style/VAMathCalculator.Form.Prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dependency_summary_aid_text"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/fragment_dependency_summary_child_aid_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/VAMathCalculator.Form.Body"
                android:text="@string/dependency_summary_child_aid_description">
            </TextView>
            <Spinner
                android:id="@+id/fragment_dependency_summary_dailyaid_spinner"
                style="@style/VAMathCalculator.Form.Spinner"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>