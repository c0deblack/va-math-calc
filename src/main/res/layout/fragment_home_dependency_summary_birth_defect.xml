<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:id="@+id/birth_defect_list_view">

    <TextView
        android:id="@+id/birth_defect_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:maxLength="15"
        android:maxLines="1"
        android:text="Short Description"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/birth_defect_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/birth_defect_level"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:text="Level IV"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/birth_defect_type"
        app:layout_constraintStart_toEndOf="@+id/birth_defect_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/birth_defect_type"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="Spina Bifida"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/birth_defect_edit"
        app:layout_constraintStart_toEndOf="@+id/birth_defect_level"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/birth_defect_edit"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Edit"
        android:textColor="@color/light_blue_900"
        app:layout_constraintEnd_toStartOf="@+id/birth_defect_delete"
        app:layout_constraintStart_toEndOf="@+id/birth_defect_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/birth_defect_delete"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:text="Delete"
        android:gravity="center"
        android:textColor="@color/light_blue_900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/birth_defect_edit"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>